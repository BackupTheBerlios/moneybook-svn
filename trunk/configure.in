AC_DEFINE_UNQUOTED([SRC_DIR], ["$srcdir"],[the srcdir])
 
AC_ARG_WITH(xml4c,
	[AS_HELP_STRING( --with-xml4c=DIR, use xml4c install rooted at <DIR>)],
        [XML4C_CFLAGS=" -I$withval/include "
